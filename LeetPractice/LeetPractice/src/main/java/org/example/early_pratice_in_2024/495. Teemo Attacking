class Solution {
    public int findPoisonedDuration(int[] timeSeries, int duration) {
        int time = 0;
        if(timeSeries.length==1){
            return duration;
        }
        for(int i = 1; i < timeSeries.length; i++){
            time += Math.min(timeSeries[i] - timeSeries[i - 1], duration);
        }
        return time + duration;
    }
}
